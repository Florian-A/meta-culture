{
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mysql2": "^3.9.7",
    "xrpl": "^3.0.0",
    "xumm": "^1.7.7"
  },
  "nodemonConfig": {
    "execMap": {
      "js": "node -r dotenv/config"
